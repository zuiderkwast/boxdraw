    "┝" => "╵╷╺ ",
    "┞" => "╹╷╶ ",
    "┟" => "╵╻╶ ",
    "┠" => "╹╻╶ ",
    "┡" => "╹╷╺ ",
    "┢" => "╵╻╺ ",
