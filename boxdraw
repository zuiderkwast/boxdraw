    "╆" => "╵╻╺╴",
    "╇" => "╹╷╺╸",
    "╈" => "╵╻╺╸",
    "╉" => "╹╻╶╸",
    "╊" => "╹╻╺╴",
    "╋" => "╹╻╺╸",
    "═" => "  ══",
    "║" => "║║  ",
    "╒" => " ╷═ ",
    "╓" => " ║╶ ",
